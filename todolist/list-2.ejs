<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>Todo-List</title>

    <link rel="stylesheet" href="css/styles.css">

</head>

<body>

    <div class="box" id="heading">
        <h1>

            <%=  kindOfDay %>
        </h1>
    </div>

    <div class="box">

        <%newLists.forEach (function(ite) { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=ite.id%>" onchange="this.form.submit()">
                    <p>
                        <%=ite.name%>

                    </p>
                </div>
                <input type="hidden" name="listName" value="<%=kindOfDay %>"></input>
            </form>

            <%  });%>

                <form class="item" action="/" method="POST">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off"><br>
                    <button type="submit" name="sub" value="<%=kindOfDay%>">+</button>

                </form>
    </div>






</body>

</html>